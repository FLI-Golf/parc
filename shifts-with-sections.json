[
  {
    "id": "shifts",
    "name": "shifts",
    "type": "base",
    "system": false,
    "schema": [
      {
        "id": "staff_member",
        "name": "staff_member",
        "type": "relation",
        "system": false,
        "required": true,
        "unique": false,
        "options": {
          "collectionId": "staff",
          "cascadeDelete": false,
          "minSelect": null,
          "maxSelect": 1,
          "displayFields": ["first_name", "last_name"]
        }
      },
      {
        "id": "assigned_section",
        "name": "assigned_section",
        "type": "relation",
        "system": false,
        "required": false,
        "unique": false,
        "options": {
          "collectionId": "sections",
          "cascadeDelete": false,
          "minSelect": null,
          "maxSelect": 1,
          "displayFields": ["section_name", "section_code"]
        }
      },
      {
        "id": "shift_date",
        "name": "shift_date",
        "type": "date",
        "system": false,
        "required": true,
        "unique": false,
        "options": {
          "min": "",
          "max": ""
        }
      },
      {
        "id": "start_time",
        "name": "start_time",
        "type": "text",
        "system": false,
        "required": true,
        "unique": false,
        "options": {
          "min": null,
          "max": 5,
          "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
        }
      },
      {
        "id": "end_time",
        "name": "end_time",
        "type": "text",
        "system": false,
        "required": true,
        "unique": false,
        "options": {
          "min": null,
          "max": 5,
          "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$"
        }
      },
      {
        "id": "break_duration",
        "name": "break_duration",
        "type": "number",
        "system": false,
        "required": false,
        "unique": false,
        "options": {
          "min": 0,
          "max": 480
        }
      },
      {
        "id": "position",
        "name": "position",
        "type": "select",
        "system": false,
        "required": true,
        "unique": false,
        "options": {
          "maxSelect": 1,
          "values": [
            "manager",
            "server",
            "chef",
            "bartender",
            "host",
            "busser",
            "dishwasher",
            "kitchen_prep"
          ]
        }
      },
      {
        "id": "status",
        "name": "status",
        "type": "select",
        "system": false,
        "required": true,
        "unique": false,
        "options": {
          "maxSelect": 1,
          "values": [
            "scheduled",
            "confirmed",
            "completed",
            "cancelled",
            "no_show"
          ]
        }
      },
      {
        "id": "notes",
        "name": "notes",
        "type": "text",
        "system": false,
        "required": false,
        "unique": false,
        "options": {
          "min": null,
          "max": 500,
          "pattern": ""
        }
      }
    ],
    "indexes": [],
    "listRule": "",
    "viewRule": "",
    "createRule": "@request.auth.role = 'admin' || @request.auth.role = 'manager'",
    "updateRule": "@request.auth.role = 'admin' || @request.auth.role = 'manager' || (@request.auth.id = staff_member.user_id && @request.data.status:isset = true)",
    "deleteRule": "@request.auth.role = 'admin'"
  }
]
